{
  "name": "Numina Web - AI Personal Growth Platform",
  "short_name": "Numina",
  "description": "AI-powered personal growth and emotional wellness platform for desktop and web",
  "start_url": "/",
  "display": "standalone",
  "orientation": "any",
  "theme_color": "#10B981",
  "background_color": "#1F2937",
  "categories": ["productivity", "health", "lifestyle"],
  "lang": "en-US",
  "dir": "ltr",
  "scope": "/",
  "icons": [
    {
      "src": "/icon-192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/icon-512.png", 
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/icon-1024.png",
      "sizes": "1024x1024", 
      "type": "image/png",
      "purpose": "any maskable"
    }
  ],
  "screenshots": [
    {
      "src": "/screenshot-desktop.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Numina Web Desktop Interface"
    },
    {
      "src": "/screenshot-mobile.png", 
      "sizes": "375x812",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Numina Web Mobile Interface"
    }
  ],
  "features": [
    "AI Chat Assistant",
    "Emotional Analytics", 
    "Real-time Insights",
    "Cloud Synchronization",
    "Offline Support"
  ],
  "shortcuts": [
    {
      "name": "New Chat",
      "short_name": "Chat",
      "description": "Start a new conversation with Numina AI",
      "url": "/chat",
      "icons": [
        {
          "src": "/chat-icon-96.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Analytics",
      "short_name": "Analytics", 
      "description": "View your emotional analytics dashboard",
      "url": "/analytics",
      "icons": [
        {
          "src": "/analytics-icon-96.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Profile",
      "short_name": "Profile",
      "description": "Access your profile and settings", 
      "url": "/profile",
      "icons": [
        {
          "src": "/profile-icon-96.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "file_handlers": [
    {
      "action": "/upload",
      "accept": {
        "image/*": [".png", ".jpg", ".jpeg", ".gif", ".webp"],
        "text/*": [".txt", ".md", ".json"]
      }
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+numina",
      "url": "/share?data=%s"
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "GET",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  }
}